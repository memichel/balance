<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/item_event_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_settings_black_48dp"
                android:tint="@color/grey" />

            <TextView
                android:id="@+id/item_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xhigh_margin"
                android:layout_marginRight="@dimen/xhigh_margin"
                android:layout_toRightOf="@+id/item_event_image"
                android:text="My event"
                android:textSize="@dimen/text_size_medium" />

            <LinearLayout
                android:id="@+id/item_event_divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/item_event_name"
                android:layout_marginBottom="@dimen/little_margin"
                android:layout_marginLeft="@dimen/high_margin"
                android:layout_marginRight="@dimen/high_margin"
                android:layout_marginTop="@dimen/little_margin"
                android:layout_toRightOf="@+id/item_event_image"
                android:background="@color/colorDivider"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_event_divider1"
                android:layout_marginLeft="@dimen/xhigh_margin"
                android:layout_marginRight="@dimen/xhigh_margin"
                android:layout_toRightOf="@+id/item_event_image"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:src="@drawable/ic_people_black_24dp"
                        android:tint="@color/grey" />

                    <TextView
                        android:id="@+id/item_event_people_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:minWidth="60dp"
                        android:text="8" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_event_total_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:minWidth="60dp"
                        android:text="504589 â‚¬" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:src="@drawable/ic_shopping_cart_black_24dp"
                        android:tint="@color/grey" />
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</merge>